// Custom styles.
.brand {
    background: #007acc;
}

.header {
    position: relative;
    background: url(/uploads/headbg.jpg) no-repeat center 70%;
    background-size: cover;
}
.header-inner {
    padding-top:300px;
}

.site-subtitle {
    color: #ddd;
    text-shadow: 1px 2px 23px #007acc;
}

#main{
	background: url(/uploads/bg.jpg)
}

.links-of-author a:before {
    display: none;
}

.btn {
    background: #007acc;
    border: 2px solid #007acc;
}
.btn:hover,
.post-button .btn:hover {
    border-color: #007acc;
    color: #007acc;
}
.post-button .btn {
    background: #007acc;
}
.sidebar-toggle {
    background: #007acc;
}
.back-to-top {
    background: #007acc;
}

.pagination .prev,
.pagination .next,
.pagination .page-number {
    color: #007acc;
}
.pagination .prev:hover,
.pagination .next:hover,
.pagination .page-number:hover {
    border-top-color: #007acc;
}
.pagination .space {
    color: #007acc;
}
.pagination .page-number.current {
    background: #99d6ff;
    border-top-color: #007acc;
}